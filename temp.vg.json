{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Life Expectancy and GDP Per Capita by Country in 2022",
  "data": {
    "url": "Final_Merged_GDP_Per_Capita_Country_Region_Life_Expectancy.csv"
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          "Show All",
          "Eastern Mediterranean",
          "Africa",
          "Americas",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Life_Expectancy > 0"},
    {"filter": "datum.GDP_Per_Capita > 0"},
    {"filter": "Region_selection == 'Show All' || datum.Region == Region_selection || !Region_selection"}
  ],
  "encoding": {
    "x": {
      "field": "GDP_Per_Capita",
      "type": "quantitative",
      "title": "GDP Per Capita",
      "scale": {"domain": [0, 100000]},
      "axis": {"tickCount": 5, "format": "s"}
    },
    "y": {
      "field": "Life_Expectancy",
      "type": "quantitative",
      "title": "Life Expectancy",
      "scale": {"domain": [50, 90]},
      "axis": {"tickCount": 6, "format": ".1f"}
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "scale": {
        "domain": ["Eastern Mediterranean", "Africa", "Americas", "Europe", "South-East Asia", "Western Pacific"],
        "range": ["#e41a1c", "#984ea3", "#ff7f00", "#a6cee3", "#377eb8", "#a65628"]
      }
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "sqrt",
            "domain": [1000000, 500000000],
            "range": [40, 700]
          },
          "legend": {"format": ".1s"}
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Life_Expectancy", "type": "quantitative", "title": "Life Expectancy"},
          {"field": "GDP_Per_Capita", "type": "quantitative", "title": "GDP Per Capita"},
          {"field": "Population", "type": "quantitative", "title": "Population"},
          {"field": "Region", "type": "nominal", "title": "Region"}
        ]
      }
    },
    {
      "mark": "text",
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "x": {"field": "GDP_Per_Capita", "type": "quantitative"},
        "y": {"field": "Life_Expectancy", "type": "quantitative"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] === 'Malaysia' || datum['Country'] === 'United States of America' || datum['Country'] === 'China' || datum['Country'] === 'Singapore' || datum['Country'] === 'Japan'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
