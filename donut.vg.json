{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "Donut Chart of Total Cases by Region",
    "width": 400,
    "height": 400,
    "autosize": "none",
  
    "signals": [
      {"name": "startAngle", "value": 0},
      {"name": "endAngle", "value": 6.29},
      {"name": "padAngle", "value": 0.04},
      {"name": "innerRadius", "value": 85},
      {"name": "cornerRadius", "value": 5.5},
      {"name": "sort", "value": false},
      {
        "name": "selected",
        "value": "",
        "on": [{"events": "mouseover", "update": "datum"}]
      }
    ],
  
    "data": [
      {
        "name": "table",
        "values": [
          {"Region": "Eastern Mediterranean", "Total_cases": 161778.0},
          {"Region": "Africa", "Total_cases": 100000.0},
          {"Region": "Americas", "Total_cases": 10000.0},
          {"Region": "Europe", "Total_cases": 0.0},
          {"Region": "South-East Asia", "Total_cases": 4893.0},
          {"Region": "Western Pacific", "Total_cases": 100000.0}
        ],
        "transform": [
          {
            "type": "pie",
            "field": "Total_cases",
            "startAngle": {"signal": "startAngle"},
            "endAngle": {"signal": "endAngle"},
            "sort": {"signal": "sort"}
          }
        ]
      }
    ],
  
    "scales": [
      {
        "name": "color",
        "type": "ordinal",
        "domain": {"data": "table", "field": "Region"},
        "range": ["#90927d", "#c0471c", "#865a33", "#ff5733", "#4ea0f5", "#71ff33"]
      }
    ],
  
    "marks": [
      {
        "type": "arc",
        "from": {"data": "table"},
        "encode": {
          "enter": {
            "fill": {"scale": "color", "field": "Region"},
            "x": {"signal": "width / 2"},
            "y": {"signal": "height / 2"}
          },
          "update": {
            "startAngle": {"field": "startAngle"},
            "endAngle": {"field": "endAngle"},
            "padAngle": {"signal": "padAngle"},
            "innerRadius": {"signal": "innerRadius"},
            "outerRadius": {"signal": "width / 2"},
            "cornerRadius": {"signal": "cornerRadius"}
          }
        }
      }
    ]
  }
  